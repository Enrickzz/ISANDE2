                    if (!((key == 8) || (key == 32) || (key >= 65 && key <= 90))) {
                        e.preventDefault();
                         $('#errormsg').text('Invalid! Only character input accepted');
                    }
                    else{
                        $('#errormsg').text('');
                    }
                });
            });

