    <script>
        function statuscheck() {
            var status = document.getElementById('showstatus').innerText
            if(status == "Done"){
                document.getElementById('additem').parentNode.removeChild(document.getElementById('additem'));
                //document.getElementById('delete').parentNode.removeChild(document.getElementById('delete'));
                document.getElementById('back').parentNode.removeChild(document.getElementById('back'));
                document.getElementById('send').parentNode.removeChild(document.getElementById('send'));
                document.getElementById('showstatus').style.color="green";

                var removeButton2 = document.getElementsByClassName('delete');
                var i;
                for(i=0 ; i < removeButton2.length; i++){
                    removeButton2[i].style.display = "none";
                }
            }else if(status == "Unsent"){
                document.getElementById('showstatus').style.color="orange";
                var rm = document.getElementById('send');
                rm.parentNode.removeChild(rm);
            }
           
        }
        
        window.onload = statuscheck;
    </script>

            
